    </files>
      <languages folder="../language">
          <language tag="en-GB">en-GB/en-GB.com_realestatemanager.sys.ini</language>
      </languages>
    </administration>

  <updateservers>
    <server type="extension" priority="1" name="Realestatemanager`s Update">http://ordasoft.com/xml_update/realestatemanager_update.xml</server>
  </updateservers>
</extension>
