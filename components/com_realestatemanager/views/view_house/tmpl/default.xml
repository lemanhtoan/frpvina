          <field name="viewhouselayout" type="viewhouselayout" default="" class="inputbox" label="Select layout" multiple ="false" size="1" description="Choose a layout house" required="false" />
            <field name="back_button" type="list" label="Back Button" required="false" description="Show/Hide a Back Button">
                <option value="">Use Global</option>
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </field>
            <field name="house" type="house" default="" class="inputbox" label="House" multiple ="false" size="1" description="Choose a House to show it as dedicated menu item" required="true" />
        </fieldset>
    </fields>
</metadata>


